{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@abi-types/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "../contracts"
        }
    ]
}